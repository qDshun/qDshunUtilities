/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "paths": {
      "@services": ["app/services/index.ts"],
      "@subsystems": ["app/services/subsystems/index.ts"],
      "@guards": ["app/guards/index.ts"],
      "@interceptors": ["app/interceptors/index.ts"],
      "@models/business": ["app/models/business/index.ts"],
      "@models/request": ["app/models/request/index.ts"],
      "@models/response": ["app/models/response/index.ts"],
      "@components/game/*": ["app/components/game/*"],
      "@components/auth/*": ["app/components/auth/*"],
      "@components/portal/*": ["app/components/portal/*"],
    },
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
